<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doublesibi.utils.calc.datecalculator">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_datecalculator"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_start_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DurationHistActivity"
            android:label="@string/duration_activity_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EventHistActivity"
            android:label="@string/eventday_activity_title"
            android:screenOrientation="portrait" />
    </application>

</manifest>