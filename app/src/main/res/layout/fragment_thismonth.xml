<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doublesibi.utils.calc.datecalculator.ThismonthFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_vertical_margin"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/this_year_solar"
                android:textSize="32sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/label_result_year"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/this_month_solar"
                android:textSize="32sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/label_result_month"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/this_year_jpname"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/this_year_japanes"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/label_result_year"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/week_0"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_1"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_2"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_3"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_4"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_5"
                layout="@layout/one_week"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
