<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doublesibi.utils.calc.datecalculator.ThismonthFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnPrevMonth"
                    android:background="@drawable/custombutton"
                    android:text="@string/arrow_left"
                    android:textSize="24sp"
                    android:textColor="@color/colorCalcButton"
                    android:layout_gravity="center_vertical|start"
                    android:layout_weight=".1"
                    android:layout_width="44dp"
                    android:layout_height="48dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/this_year_solar"
                        android:textSize="22sp"
                        android:gravity="end"
                        android:layout_gravity="top"
                        android:layout_width="58sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/lbThisYear"
                        android:text="@string/label_result_year"
                        android:textSize="18sp"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/this_month_solar"
                        android:textSize="22sp"
                        android:gravity="end"
                        android:layout_gravity="top"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/lbThisMonth"
                        android:text="@string/label_result_month"
                        android:textSize="18sp"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/this_year_jpname"
                        android:textSize="18sp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/this_year_japanes"
                        android:textSize="18sp"
                        android:layout_gravity="bottom"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="@string/label_result_year"
                        android:textSize="18sp"
                        android:layout_gravity="bottom"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnNextMonth"
                    android:background="@drawable/custombutton"
                    android:text="@string/arrow_right"
                    android:textSize="24sp"
                    android:textColor="@color/colorCalcButton"
                    android:layout_gravity="center_vertical|end"
                    android:layout_weight=".1"
                    android:layout_width="44dp"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:weightSum="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="7"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="36dp">

                    <TextView
                        android:text="@string/sunday"
                        android:textColor="@android:color/holo_red_light"
                        android:background="@drawable/boxed_edittext_filled"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/monday"
                        android:textColor="@android:color/black"
                        android:background="@drawable/boxed_edittext_filled"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/tuesday"
                        android:textColor="@android:color/black"
                        android:background="@drawable/boxed_edittext_filled"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/wednesday"
                        android:textColor="@android:color/black"
                        android:background="@drawable/boxed_edittext_filled"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/thursday"
                        android:textColor="@android:color/black"
                        android:background="@drawable/boxed_edittext_filled"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/friday"
                        android:textColor="@android:color/black"
                        android:background="@drawable/boxed_edittext_filled"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/saturday"
                        android:textColor="@android:color/holo_blue_dark"
                        android:background="@drawable/boxed_edittext_filled"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <include
                    android:id="@+id/week_0"
                    layout="@layout/one_week"/>

                <include
                    android:id="@+id/week_1"
                    layout="@layout/one_week"/>

                <include
                    android:id="@+id/week_2"
                    layout="@layout/one_week"/>

                <include
                    android:id="@+id/week_3"
                    layout="@layout/one_week"/>

                <include
                    android:id="@+id/week_4"
                    layout="@layout/one_week"/>

                <include
                    android:id="@+id/week_5"
                    layout="@layout/one_week"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/this_year_holidayList"
                android:textSize="18sp"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
