<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doublesibi.utils.calc.datecalculator.ThismonthFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/hello_blank_fragment"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            android:id="@+id/week_0"
            layout="@layout/one_week"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            android:id="@+id/week_1"
            layout="@layout/one_week"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            android:id="@+id/week_2"
            layout="@layout/one_week"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            android:id="@+id/week_3"
            layout="@layout/one_week"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            android:id="@+id/week_4"
            layout="@layout/one_week"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include
            android:id="@+id/week_5"
            layout="@layout/one_week"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
</FrameLayout>
