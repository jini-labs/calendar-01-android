<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doublesibi.utils.calc.datecalculator.ThismonthFragment">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btnPrevMonth"
                app:srcCompat="@drawable/ic_action_prev"
                android:layout_gravity="center_vertical|start"
                android:layout_width="48dp"
                android:layout_height="52dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="6dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/this_year_solar"
                    android:textSize="26sp"
                    android:gravity="end"
                    android:layout_width="64sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lbThisYear"
                    android:text="@string/label_result_year"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/this_month_solar"
                    android:textSize="26sp"
                    android:gravity="end"
                    android:layout_width="36sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lbThisMonth"
                    android:text="@string/label_result_month"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/this_year_jpname"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/this_year_japanes"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:gravity="end"
                    android:layout_width="24sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/label_result_year"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnNextMonth"
                app:srcCompat="@drawable/ic_action_next"
                android:layout_gravity="center_vertical|end"
                android:layout_width="48dp"
                android:layout_height="52dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/week_0"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_1"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_2"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_3"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_4"
                layout="@layout/one_week"/>

            <include
                android:id="@+id/week_5"
                layout="@layout/one_week"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
