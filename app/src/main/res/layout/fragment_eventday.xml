<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.doublesibi.utils.calc.datecalculator.EventdayFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--1st date-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="36dp">

                <TextView
                    android:id="@+id/colorLabelStartDate"
                    android:text="@string/lb_eve_start"
                    android:textSize="24sp"
                    android:gravity="start"
                    android:textColor="@color/colorLabelStartDate"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_styy"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="4"
                    android:hint="2015"
                    android:textColor="@color/colorInputStartDate"
                    android:textColorHint="@color/colorHintYMD"
                    android:layout_marginEnd="5dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/datesep1"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_stmm"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="2"
                    android:hint="9"
                    android:textColorHint="@color/colorHintYMD"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginEnd="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/datesep2"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_stdd"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="2"
                    android:hint="9"
                    android:textColorHint="@color/colorHintYMD"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginEnd="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/btn_event_stdt"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btn_start_today"
                    android:src="@drawable/ic_today"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- border line -->
        <View
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_weight="8"
                android:weightSum="20"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value1"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:theme="@style/EditTextStyle"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/lb_day"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value2"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:theme="@style/EditTextStyle"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/lb_week"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value3"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:theme="@style/EditTextStyle"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/lb_month"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value4"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:theme="@style/EditTextStyle"
                        android:cursorVisible="true"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/lb_year"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnEvePastday"
                    android:text="@string/lb_eve_before_day"
                    android:background="@drawable/before_after_unselected"
                    android:textColor="@color/colorCalcButton"
                    android:layout_weight=".5"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnEvePostday"
                    android:text="@string/lb_eve_day_after"
                    android:background="@drawable/before_after_unselected"
                    android:textColor="@color/colorCalcButton"
                    android:layout_weight=".5"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnEventdaySave"
                android:background="@drawable/button_selector"
                android:text="@string/btn_eve_save"
                android:textSize="16sp"
                android:textColor="@color/colorCalcButton"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_calc_eventday"
                android:background="@drawable/button_selector"
                android:text="@string/btn_eve_calc"
                android:textSize="18sp"
                android:textColor="@color/colorCalcButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- border line -->
        <View
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:gravity="center"
            android:background="@color/colorEventdayResult"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:text="@string/lb_eve_result_date"
                android:textSize="24sp"
                android:gravity="start"
                android:textColor="@color/colorLabelStartDate"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/resultEveYear"
                android:text=""
                android:textSize="24sp"
                android:gravity="end"
                android:maxLength="4"
                android:hint="2015"
                android:textColor="@color/colorResultValue"
                android:textColorHint="@color/colorHintYMD"
                android:layout_marginEnd="5dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="/"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/colorInputStartDate"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/resultEveMonth"
                android:text=""
                android:textSize="24sp"
                android:gravity="end"
                android:maxLength="2"
                android:hint="9"
                android:textColorHint="@color/colorHintYMD"
                android:textColor="@color/colorResultValue"
                android:layout_marginEnd="5dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="/"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/colorInputStartDate"
                android:layout_marginEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/resultEveDate"
                android:text=""
                android:textSize="24sp"
                android:gravity="end"
                android:maxLength="2"
                android:hint="9"
                android:textColorHint="@color/colorHintYMD"
                android:textColor="@color/colorResultValue"
                android:layout_marginEnd="5dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/resultEveWeek"
                android:text=""
                android:textSize="20sp"
                android:gravity="end"
                android:maxLength="2"
                android:hint="Mo"
                android:textColorHint="@color/colorHintYMD"
                android:textColor="@color/colorResultValue"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
     </LinearLayout>

</FrameLayout>
