<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.doublesibi.utils.calc.datecalculator.EventdayFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--1st date-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="36dp">

                <TextView
                    android:id="@+id/colorLabelStartDate"
                    android:text="@string/label_eventday_base"
                    android:textSize="24sp"
                    android:gravity="start"
                    android:textColor="@color/colorLabelStartDate"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_styy"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="4"
                    android:hint="2015"
                    android:textColor="@color/colorInputStartDate"
                    android:textColorHint="@color/colorHintYMD"
                    android:layout_marginRight="5dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/datesep1"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_stmm"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="2"
                    android:hint="9"
                    android:textColorHint="@color/colorHintYMD"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/datesep2"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_stdd"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="2"
                    android:hint="9"
                    android:textColorHint="@color/colorHintYMD"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/btn_event_stdt"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btn_start_today"
                    android:src="@drawable/ic_today"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="@string/label_eventday_no"
            android:textColor="@color/colorLabelStartDate"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:columnCount="4"
                android:rowCount="4"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/value1"
                    android:inputType="number"
                    android:ems="10"
                    android:background="@drawable/custom_area"
                    android:paddingBottom="5dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/label_eventday_date"
                    android:ems="10"
                    android:gravity="end"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/value2"
                    android:inputType="number"
                    android:ems="10"
                    android:background="@drawable/custom_area"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/label_eventday_week"
                    android:ems="10"
                    android:gravity="end"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/value3"
                    android:inputType="number"
                    android:ems="10"
                    android:background="@drawable/custom_area"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/label_eventday_month"
                    android:ems="10"
                    android:gravity="end"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/value4"
                    android:inputType="number"
                    android:ems="10"
                    android:background="@drawable/custom_area"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="@string/label_eventday_year"
                    android:ems="10"
                    android:gravity="end"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spinnerdurationunit"
                    android:entries="@array/spinner_duration_unit"
                    android:gravity="end"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_gravity="fill_vertical"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_rowSpan="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spinnerbeforeafter"
                    android:entries="@array/spinner_beforeafter"
                    android:gravity="end"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_gravity="fill_vertical"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_rowSpan="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </GridLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_calc_eventday"
            android:background="@color/colorCalcButtonNormal"
            android:text="@string/label_calc_button"
            android:textSize="20sp"
            android:textColor="@color/colorCalcButton"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/result_eventday"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/colorLabelStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/eventday_result"
                android:textSize="20sp"
                android:textColor="@color/colorLabelStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
