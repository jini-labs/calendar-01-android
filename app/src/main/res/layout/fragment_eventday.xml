<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.doublesibi.utils.calc.datecalculator.EventdayFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--1st date-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="36dp">

                <TextView
                    android:id="@+id/colorLabelStartDate"
                    android:text="@string/label_eventday_base"
                    android:textSize="24sp"
                    android:gravity="start"
                    android:textColor="@color/colorLabelStartDate"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_styy"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="4"
                    android:hint="2015"
                    android:textColor="@color/colorInputStartDate"
                    android:textColorHint="@color/colorHintYMD"
                    android:layout_marginRight="5dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/datesep1"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_stmm"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="2"
                    android:hint="9"
                    android:textColorHint="@color/colorHintYMD"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/datesep2"
                    android:text="/"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/event_stdd"
                    android:text=""
                    android:textSize="24sp"
                    android:gravity="end"
                    android:maxLength="2"
                    android:hint="9"
                    android:textColorHint="@color/colorHintYMD"
                    android:textColor="@color/colorInputStartDate"
                    android:layout_marginRight="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/btn_event_stdt"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/btn_start_today"
                    android:src="@drawable/ic_today"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="@string/label_eventday_no"
            android:textColor="@color/colorLabelStartDate"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_weight="8"
                android:weightSum="20"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value1"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:background="@drawable/boxed_edittext_normal"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/label_result_days"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value2"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:background="@drawable/boxed_edittext_normal"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/label_result_week"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value3"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:background="@drawable/boxed_edittext_normal"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/label_result_month"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow
                    android:layout_weight="5"
                    android:weightSum="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/value4"
                        android:inputType="number"
                        android:textSize="@dimen/eve_input_valuetextsize"
                        android:textColor="@color/colorInputEndDate"
                        android:gravity="end"
                        android:background="@drawable/boxed_edittext_normal"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:text="@string/label_result_year"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/dur_table_label_textsize"
                        android:textColor="@android:color/white"
                        android:background="@drawable/boxed_edittext_reverse"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinnerbeforeafter"
                    android:entries="@array/spinner_beforeafter"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnEventdaySave"
                android:background="@drawable/boxed_edittext_reverse"
                android:text="@string/label_dura_save_button"
                android:textSize="16sp"
                android:textColor="@color/colorCalcButton"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_calc_eventday"
                android:background="@drawable/boxed_edittext_reverse"
                android:text="@string/label_calc_button"
                android:textSize="20sp"
                android:textColor="@color/colorCalcButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/result_eventday"
                android:textSize="@dimen/eve_result_textsize"
                android:textColor="@color/colorLabelEndDate"
                android:background="@drawable/custom_edittext"
                android:layout_weight="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/result_eventday_week"
                android:textSize="@dimen/eve_result_textsize"
                android:textColor="@color/colorLabelEndDate"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/eventday_result"
                android:textSize="@dimen/eve_result_textsize"
                android:textColor="@color/colorLabelStartDate"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
